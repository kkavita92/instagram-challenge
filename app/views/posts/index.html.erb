<div class="posts-wrapper row">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="post-head">
        <div class="name">
          <%=post.user.username%>
        </div>
      </div>
      <div class="image center-block">
        <%= link_to (image_tag(post.image.url, alt: 'Image')), post_path(post) if post.image? %>
      </div>
      <p class="caption">
        <%= post.caption %>
      </p>
    </div>
  <% end %>
</div>
